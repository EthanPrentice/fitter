<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ethanprentice.fitter">

    <application
        android:name="com.ethanprentice.fitter.ui.FitApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FitTheme.Splash" >

        <activity
            android:name="com.ethanprentice.fitter.ui.user.auth.AuthActivity"
            android:label="@string/app_name"
            android:theme="@style/FitTheme.Login"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name="com.ethanprentice.fitter.ui.user.welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/FitTheme.Login"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name="com.ethanprentice.fitter.ui.nav.NavActivity"
            android:label="@string/app_name"
            android:theme="@style/FitTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name="com.ethanprentice.fitter.ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/FitTheme.Splash"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>


        </activity>

    </application>



</manifest>