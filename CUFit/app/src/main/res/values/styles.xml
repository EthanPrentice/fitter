<resources>
    <!-- Base application theme. -->
    <style name="FitTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="buttonTextStyle">@style/button_text</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <item name="actionBarSize">80dp</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="chipStyle">@style/FitChipStyle</item>
    </style>

    <style name="FitTheme.Login">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FitTheme.Splash">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="FitTheme.AppBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <!-- Text Styles -->
    <style name="FitTheme.TextAppearance"/>

    <style name="subtitle" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="body_text" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="bold_body_text" parent="body_text">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="header1" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/header1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header2" parent="FitTheme.TextAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/header2_text_size</item>
    </style>

    <style name="header3_bold" parent="FitTheme.TextAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/header3_text_size</item>
    </style>

    <style name="header3" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/header3_text_size</item>
    </style>


    <style name="button_text" parent="header3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="metadata_title1" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_title1_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="metadata_title2" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_title2_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="metadata_body1_primary" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body1_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="metadata_body1_secondary" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body1_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="metadata_body2" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body2_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="metadata_body3" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body3_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="metadata_body4" parent="FitTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body4_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="edittext_text" parent="body_text">
        <item name="fontFamily">@font/montserrat</item>
    </style>


    <!-- Component styles -->
    <style name="BirthDatePicker" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="marquee_message" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="FitChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="chipStrokeColor">@color/text_secondary</item>
        <item name="chipStrokeWidth">@dimen/LU_0_25</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipSurfaceColor">@android:color/transparent</item>
    </style>

</resources>