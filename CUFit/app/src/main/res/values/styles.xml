<resources>
    <!-- Base application theme. -->
    <style name="FitTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonTextStyle">@style/button_text</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="FitTheme.Login">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FitTheme.Splash">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>


    <!-- Text Styles -->
    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat"/>

    <style name="body_text" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="bold_body_text" parent="body_text">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="header1" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header2" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header2_text_size</item>
    </style>

    <style name="header3" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/header3_text_size</item>
    </style>

    <style name="button_text" parent="header3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="metadata_title1" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_title1_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="metadata_title2" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_title2_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="metadata_body1_primary" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body1_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="metadata_body1_secondary" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body1_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="metadata_body2" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/metadata_body2_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="edittext_text" parent="body_text">
        <item name="fontFamily">@font/montserrat</item>
    </style>


    <!-- Component styles -->
    <style name="BirthDatePicker" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

</resources>