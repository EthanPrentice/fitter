<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FitButton">
        <attr name="buttonType">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="tertiary" value="2" />
        </attr>
        <attr name="text" format="string" />
        <attr name="buttonTextStyle" format="reference" />
        <attr name="icon" format="reference"/>
        <attr name="iconTintEnabled" format="boolean"/>
        <attr name="iconOn">
            <enum name="left"  value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="buttonMode">
            <enum name="normal" value="0"/>
            <enum name="inverted" value="1"/>
        </attr>
        <attr name="android:clickable" format="boolean"/>
        <attr name="android:enabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FitEditText">
        <attr name="editTextStyle" format="reference" />

        <attr name="editTextType">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
        </attr>
        <attr name="android:hint"/>
        <attr name="android:text"/>
        <attr name="android:inputType"/>
        <attr name="android:imeOptions"/>
    </declare-styleable>

    <declare-styleable name="MeasuredEditText">
        <attr name="decimals" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StatBarItem">
        <attr name="title" format="string"/>
        <attr name="value" format="string"/>
        <attr name="measured" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SwimlaneItemView">
        <attr name="android:textColor"/>
        <attr name="text"/>
        <attr name="image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="FitLineChart">
        <attr name="showAxisLabels" format="boolean"/>
    </declare-styleable>



</resources>